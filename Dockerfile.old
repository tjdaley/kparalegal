# STAGE 1: Builder
FROM python:3.12-slim AS builder

WORKDIR /build
COPY requirements.txt .

# Install build-time dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libffi-dev \
    && pip install --user --no-cache-dir -r requirements.txt

# STAGE 2: Runtime
FROM python:3.12-slim

# Install ONLY runtime dependencies for WeasyPrint
RUN apt-get update && apt-get install -y \
    python3-cffi \
    python3-brotli \
    libpango-1.0-0 \
    libpangoft2-1.0-0 \
    libharfbuzz-subset0 \
    libjpeg-dev \
    libopenjp2-7-dev \
    && rm -rf /var/lib/apt/lists/*

# Update and install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Security: Create a non-root user for the legal app
RUN groupadd -r jdbot && useradd -r -g jdbot jdbot

WORKDIR /app

# Copy installed packages from builder
COPY --from=builder /root/.local /home/kparalegal/.local
COPY . .

# Ensure the app has correct permissions
RUN mkdir -p /var/cache/fontconfig /home/kparalegal && \
    chown -R kparalegal:kparalegal /var/cache/fontconfig /home/kparalegal /app
RUN chown -R kparalegal:kparalegal /app
USER kparalegal
ENV PATH=/home/kparalegal/.local/bin:$PATH

EXPOSE 8093
CMD ["python", "main.py"]